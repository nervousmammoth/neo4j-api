{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "totalHits", "moreResults", "results"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["node", "edge"]
    },
    "totalHits": {
      "type": "integer",
      "minimum": 0
    },
    "moreResults": {
      "type": "boolean"
    },
    "results": {
      "type": "array"
    },
    "pagination": {
      "type": "object",
      "properties": {
        "size": {"type": "integer"},
        "from": {"type": "integer"},
        "total": {"type": "integer"},
        "hasNext": {"type": "boolean"}
      }
    }
  }
}
